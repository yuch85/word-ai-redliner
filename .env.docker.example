# Docker runtime environment variables
# Use a hostname/IP that the Word client can reach (avoid localhost if remote).
HOST=192.168.1.100
PORT=3000
PROTOCOL=https

# SSL certs mounted into the container
SSL_CERT_FILE=server.pem
SSL_KEY_FILE=server-key.pem

# Ollama proxy settings
OLLAMA_PROXY_PATH=/ollama
OLLAMA_PROXY_TARGET=http://localhost:11434
DEFAULT_OLLAMA_URL=/ollama
DEFAULT_MODEL=gpt-oss:20b
